<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.driverapp.Fragments.ListFragment"
        android:label="list_fragment"
        tools:layout="@layout/list_fragment" >
        <action
            android:id="@+id/action_listFragment_to_formFragment"
            app:destination="@id/formFragment" />
    </fragment>
    <fragment
        android:id="@+id/qrCodeFragment"
        android:name="com.example.driverapp.Fragments.addCar.QrCodeFragment"
        android:label="fragment_qr_code"
        tools:layout="@layout/fragment_qr_code" />
    <include app:graph="@navigation/bottom_sheet_nav_graph" />
    <dialog
        android:id="@+id/formFragment"
        android:name="com.example.driverapp.Fragments.addCar.formFragment"
        android:label="bottom_sheet_layout"
        tools:layout="@layout/bottom_sheet_layout" >
        <action
            android:id="@+id/action_formFragment_to_bottom_sheet_nav_graph"
            app:destination="@id/bottom_sheet_nav_graph" />
        <action
            android:id="@+id/action_formFragment_to_qrCodeFragment"
            app:destination="@id/qrCodeFragment" />
    </dialog>
</navigation>